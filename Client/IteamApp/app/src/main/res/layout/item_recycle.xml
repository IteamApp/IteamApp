<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <iteamapp.iteamapp.circleimageview.CircleImageView
            android:id="@+id/recycle_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/setting_press"
            card_view:border_width="1dp"
            card_view:border_color="#ccc"
            />

        <LinearLayout
            android:id="@+id/recycle_line"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="棒冰行动"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/recycle_pid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/recycle_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="棒冰行动，公益传播设计夏令营" />


        </LinearLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/recycle_more"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:maxLines="5"
            android:maxEms="150"
            android:ellipsize="end"
            android:textColor="#333333"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="棒冰行动，公益传播设计夏令营棒冰行动，棒冰行动，公益传播设计夏令营棒冰行动，公益传播设计夏令营,公益传播设计夏令营棒冰行动，公益传播设计夏令营棒冰行动，公益传播设计夏令营棒冰行动，公益传播设计夏令营" />

        <ImageView
            android:id="@+id/img_article"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/a"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>