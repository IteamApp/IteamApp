<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/tool_bar_top"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_club"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/white"
            >


        <RadioGroup
            android:id="@+id/radio_all"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:background="#fff">

            <RadioButton
                android:id="@+id/radio_all_hot"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                style="@style/BottomTabStyle"
                android:checked="true"
                android:text="热门社团"
                />

            <RadioButton
                android:id="@+id/radio_all_xinxi"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                android:gravity="left"
                android:text="信息科学与工程学院"
                style="@style/BottomTabStyle"
               />

            <RadioButton
                android:id="@+id/radio_all_fazheng"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                android:text="法政学院"
                style="@style/BottomTabStyle"
                />
        </RadioGroup>

        </RelativeLayout>




            <android.support.v7.widget.RecyclerView
                android:layout_toRightOf="@id/layout_club"
                android:id="@+id/recycle_club"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>


    </RelativeLayout>
</LinearLayout>