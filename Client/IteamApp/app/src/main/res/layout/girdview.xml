<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gird_img_03"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/setting"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gird_img_02"
        android:layout_marginStart="15dp" />

    <ImageView
        android:id="@+id/gird_img_04"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/setting"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gird_img_03"
        android:layout_marginStart="15dp" />

    <ImageView
        android:id="@+id/gird_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/setting"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/gird_img_04" />

    <ImageView
        android:id="@+id/gird_img_02"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/setting"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />


</RelativeLayout>

</LinearLayout>